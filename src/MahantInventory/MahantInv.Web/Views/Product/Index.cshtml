@{
    ViewData["Title"] = "Products";
}
<style>
    .sick-days-warning {
        background-color: #ffcccb !important;
    }
</style>
<div class="card border-dark">
    <div class="card-header">
        <div class="form-inline">
            <div class="col-md-3">
                <span class="font-weight-bold">Products</span>
            </div>
            <div class="col-md-3">
                <select id="ProductUsageSelect" class="form-control form-control-sm" style="width: 100%"></select>
            </div>
            <div class="col-md-2">
                <div class="row">
                    <input id="UsageQuantity" type="number" class="form-control" placeholder="Usage Quantity" />
                </div>
            </div>
            <div class="col-md-2">
                <div class="row">
                    <div class="row">
                        <button class="btn btn-outline-success" type="button" onclick="Common.UseProduct(this)">
                            <span>Use Product</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-2 text-right">
                <button class="btn btn-outline-primary" type="button" onclick="Common.OpenModal(this)" data-id="0" data-target="AddEditProduct">
                    <span>New</span>
                </button>
            </div>
        </div>
    </div>
    <div class="card-body ag-theme-balham" id="productsdata">
    </div>
</div>
@await Html.PartialAsync("_AddEditProduct",new MahantInv.Core.SimpleAggregates.Product())
@section Scripts{
<script src="~/Products/index.js" type="text/javascript" asp-append-version="true"></script>
    }
