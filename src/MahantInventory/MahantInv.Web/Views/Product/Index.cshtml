@{
    ViewData["Title"] = "Products";
}
<style>
    .sick-days-warning {
        background-color: #ffcccb !important;
    }
</style>
<div class="card border-dark">
    <div class="card-header">
        <div class="form-inline">
            <div class="col-md-2 col-sm-2 col-lg-2">
                <span class="font-weight-bold">Products</span>
            </div>
            
            <div class="col-md-2 col-sm-2 col-lg-2 text-right" style="padding-right:0px !important;">
                <button class="btn btn-outline-success" type="button" onclick="Common.ExportToExcel()">
                    <span>Export to Excel</span>
                </button>
                <button class="btn btn-outline-primary" type="button" onclick="Common.OpenModal(this)" data-id="0" data-target="AddEditProduct">
                    <span>New</span>
                </button>
            </div>
        </div>
    </div>
    <div class="card-body ag-theme-balham" id="productsdata">
    </div>
</div>
@await Html.PartialAsync("_AddEditProduct",new MahantInv.Core.SimpleAggregates.Product())
@section Scripts{
<script src="~/Products/index.js" type="text/javascript" asp-append-version="true"></script>
    }
