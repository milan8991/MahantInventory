@model MahantInv.Core.SimpleAggregates.Order

<div id="AddEditOrder" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add/Edit Order</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div id="OrderErrorSection" class="text-danger"></div>
                <input type="hidden" asp-for="@Model.Id" />
                <div class="form-group">
                    <label asp-for="@Model.ProductId"></label>
                    <select asp-for="@Model.ProductId" class="form-control form-control-sm select2" style="width:100%" placeholder="Payment Type">
                        <option value="">Select Payment Type</option>
                        @foreach (var item in (ViewBag.Products as ICollection<MahantInv.Core.ViewModels.ProductVM>))
                        {
                            <option value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Quantity"></label>
                    <input type="number" asp-for="@Model.Quantity" class="form-control form-control-sm" placeholder="Quantity" />
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.PaymentTypeId"></label>
                            <select id="PaymentTypeId" class="form-control form-control-sm select2" style="width:100%" placeholder="Payment Type">
                                <option value="">Select Payment Type</option>
                                @foreach (var item in (ViewBag.PaymentTypes as ICollection<MahantInv.Core.SimpleAggregates.PaymentType>))
                                {
                                    <option value="@item.Id">@item.Title</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.PayerId"></label>
                            <select id="PayerId" class="form-control form-control-sm select2" mu style="width:100%" placeholder="Payer">
                                <option value="">Select Payer</option>
                                @foreach (var item in (ViewBag.Payers as ICollection<MahantInv.Core.SimpleAggregates.Payer>))
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.PaidAmount"></label>
                            <input type="number" asp-for="@Model.PaidAmount" class="form-control form-control-sm" placeholder="Paid Amount" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="@Model.OrderDate"></label>
                            <input type="date" asp-for="@Model.OrderDate" class="form-control form-control-sm" placeholder="Order Date" />
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="@Model.Remark"></label>
                    <textarea asp-for="@Model.Remark" rows="2" class="form-control form-control-sm" placeholder="Remark"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="Common.SaveOrder(this)" data-target="AddEditOrder">Save</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
