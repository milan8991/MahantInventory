@{
    ViewData["Title"] = "Orders";
}
<style>
    .sick-days-warning {
        background-color: #ffcccb !important;
    }
</style>
<div class="card border-dark">
    <div class="card-header">
        <span class="font-weight-bold">Orders</span>
        <span class="float-right">
            <button class="btn btn-outline-primary btn-sm" type="button" onclick="Common.OpenModal(this)" data-id="0" data-target="PlaceOrder">
                <span>New</span>
            </button>
        </span>
    </div>
    <div class="card-body ag-theme-balham" id="ordersdata">
    </div>
</div>

<div id="OrderTransactionBodyTemplate" style="display:none;">

    <tr id='{idx}'>
        <td>{Party}</td>
        <td>{PaymentType}</td>
        <td>{PaidAmount}</td>
        <td>
            <button type="button" class="btn btn-sm btn-outline-primary" onclick="Common.EditTransaction(this)">Edit</button>
            <button type="button" class="btn btn-sm btn-outline-danger" onclick="Common.DeleteTransaction(this)">Delete</button>
        </td>
    </tr>

</div>

@*@await Html.PartialAsync("_AddEditOrder",new MahantInv.Core.SimpleAggregates.Order())*@
@await Html.PartialAsync("_PlaceOrder",new MahantInv.Core.SimpleAggregates.Order())

